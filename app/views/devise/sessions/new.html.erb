<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>
	
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :email, input_html: { class: "form-control", placeholder: "Email" } %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-md-6">
			<%= f.input :password, input_html: { class: "form-control", placeholder: "Password" } %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-10">
			<div class="checkbox">
				<% if devise_mapping.rememberable? -%>
					<div><%= f.input :remember_me, as: :boolean %></div>
				<% end -%>
			</div>
		</div>
	</div>

  	<div><%= f.submit "Sign in", class: "btn btn-success" %></div>
<% end %>

<%= render "devise/shared/links" %>