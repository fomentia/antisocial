<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.input :first_name, :autofocus => true, required: false, input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :last_name, required: false, input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :profile_name, required: false, input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :email, required: false, input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :password, required: false, input_html: { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation, required: false, input_html: { class: "form-control" } %>
  </div>

  <div>
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>