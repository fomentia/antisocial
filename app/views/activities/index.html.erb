<h1>Activity Feed</h1>

<% @activities.each do |activity| %>
	<div class="activity">
		<div class="row">
		<div class="col-md-1">
			<div><%= link_to image_tag(activity.user.gravatar_url, class: "img-rounded"), profile_path(activity.user) %></div>
		</div>
		<div class="col-md-6">
			<strong><%= activity.user.profile_name %></strong>
			<%= render "activities/status/created" %>
		</div>
	</div>
<% end %>